@inherits StoryBlog.Web.Client.Components.ReplyComposerComponent

<div class="card">
    <div class="card-header">Оставьте ваш комментарий</div>
    <div class="card-body">
        <div class="form-group">
            <label for="new-comment">Сообщение:</label>
            <textarea id="new-comment" class="form-control" rows="3" @bind="@Message"></textarea>
        </div>
        <button type="button" class="btn btn-primary small mt-2" @onclick="@onClick">
            <i class="mdi mdi-reply"></i>Отправить
        </button>
    </div>
</div>