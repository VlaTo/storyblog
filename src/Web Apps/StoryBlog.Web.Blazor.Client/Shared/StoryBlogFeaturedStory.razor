@using StoryBlog.Web.Services.Blog.Interop.Models

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Story.Title</h5>
        <p class="card-text">@Story.Content</p>
        <p class="card-text text-muted">
            <small><TimeLabel DateTime=@Story.Created /></small>
        </p>
        @*<BootstrapButton Type=BootstrapButtonTypes.Primary IsOutline=true Size=BootstrapButtonSizes.Small>Read more</BootstrapButton>*@
    </div>
    <div class="card-footer">
        <small class="text-muted">@*Story.Author.Name*@ none</small>
    </div>
</div>

@functions
{
    [Parameter]
    protected FeedStoryModel Story
    {
        get;
        set;
    }
}