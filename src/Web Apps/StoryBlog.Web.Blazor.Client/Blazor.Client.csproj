<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>7.3</LangVersion>
    <OutputType>Exe</OutputType>
    <AssemblyName>StoryBlog.Web.Client</AssemblyName>
    <RootNamespace>StoryBlog.Web.Client</RootNamespace>
    <RazorLangVersion>3.0</RazorLangVersion>
    <RestoreAdditionalProjectSources>
      https://dotnet.myget.org/F/aspnetcore-dev/api/v3/index.json;
      https://dotnet.myget.org/F/blazor-dev/api/v3/index.json;
    </RestoreAdditionalProjectSources>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>TRACE;DEBUG;BLAZOR_CLIENT</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <None Include="compilerconfig.json" />
    <Content Remove="compilerconfig.json" />
    <_ContentIncludedByDefault Remove="compilerconfig.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="IdentityModel" Version="4.0.0-preview.2.33" />
    <PackageReference Include="Microsoft.AspNetCore.Blazor" Version="3.0.0-preview9.19465.2" />
    <PackageReference Include="Microsoft.AspNetCore.Blazor.Build" Version="3.0.0-preview9.19465.2" PrivateAssets="all" />
    <PackageReference Include="Microsoft.AspNetCore.Blazor.DevServer" Version="3.0.0-preview9.19465.2" PrivateAssets="all" />
    <PackageReference Include="Microsoft.AspNetCore.Blazor.HttpClient" Version="3.0.0-preview9.19465.2" />
    <PackageReference Include="Microsoft.AspNetCore.Cors" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.WebUtilities" Version="2.2.0" />
    <PackageReference Include="Blazor.Fluxor" Version="0.35.0-pre" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
    <PackageReference Include="System.Security.Claims" Version="4.3.0" />
    <PackageReference Include="System.Text.Json" Version="4.6.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Services\Blog\StoryBlog.Web.Services.Blog.Interop\Blog.Interop.csproj" />
    <ProjectReference Include="..\..\Services\Shared\StoryBlog.Web.Services.Shared.BBCode\Shared.BBCode.csproj" />
    <ProjectReference Include="..\..\Services\Shared\StoryBlog.Web.Services.Shared.Common\Shared.Common.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="wwwroot\scripts\site.js">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Resources.resx">
      <Generator></Generator>
      <CustomToolNamespace>StoryBlog.Web.Client.Resources</CustomToolNamespace>
    </EmbeddedResource>
  </ItemGroup>

</Project>
